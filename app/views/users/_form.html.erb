<%= form_for(@user) do |f| %>
  <%=render 'shared/error_messages' %>

  <%=f.label :name %>
  <%=f.text_field :name %>

  <%=f.label :email %>
  <%=f.text_field :email %>

  <%=f.label :phone %>
  <%=f.text_field :phone %>

  <%=f.label :identifier %>
  <%=f.text_field :identifier %>

  <%=f.label :password %>
  <%=f.password_field :password %>

  <%=f.label :password_confirmation %>
  <%=f.password_field :password_confirmation %>
  <hr />
  <%= f.submit "Update",class:"btn btn-large btn-primary" %>
<% end %>