<% provide(:title,'Home') %>
<div class="container">
  <div class="span6 offset3">
      
      <form class="form-horizontal">
        <h2 class="form-signin-heading">Sign In</h2>
        <div class="alert alert-info">
        <strong>Info: </strong>Leave password blank for 'Request Account' and 'Forgot Password'.
        </div>
        <div class="control-group">
          <label class="control-label" for="inputEmail">Email</label>
          <div class="controls">
            <input type="text" id="inputEmail" placeholder="Email">
          </div>
        </div>
        <div class="btn-group" style="text-align:center">
        <button type="submit" class="btn">Request Account</button>
        <button type="submit" class="btn">Forgot Password</button>
       </div>
        <p></p><p></p>
        <div class="control-group">
          <label class="control-label" for="inputPassword">Password</label>
          <div class="controls">
            <input type="password" id="inputPassword" placeholder="Password">
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
            <label class="checkbox">
              <input type="checkbox"> Remember me
            </label>
            
          </div>
        </div>
        <button type="submit" class="btn btn-block btn-large btn-primary">Sign in</button>
      </form>
    </div>
    </div> <!-- /container -->