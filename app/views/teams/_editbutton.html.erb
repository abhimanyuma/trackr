<% if right.nil? %>
  <div class="btn-group pull-right">
<% else %>
  <div class="btn-group">
<% end %>
  <%= link_to "Edit" , edit_team_path(@team), class: "btn btn-primary" %>
  <a class="btn dropdown-toggle btn-primary " data-toggle="dropdown" href="#">
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu" >
    <li><%= link_to "Managed Companies" , team_companies_path(@team) %></li>
      <% if @team.active %>
        <li><%=   link_to "Delete" , activity_team_path(@team,active: false), method: :put %></li>
      <% else %>
        <li><%=   link_to "Undelete" , activity_team_path(@team,active: true), method: :put %></li>
      <% end %>
    <% if current_user.superadmin? %>
      <li class="divider"></li>
      <li><%= link_to "Permanently Delete Company",@team,method: :delete, data: {confirm: "This will permanently delete the team, the action CANNOT be undone, are you sure ?"} %></li>
    <% end %>
  </ul>
</div>