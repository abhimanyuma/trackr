<% provide(:title,"Edit #{@team.name}") %>

<h1>Update team details</h1>

<div class="row pagination-centered">
	<div class="span12">
		<%= form_for(@team) do |f| %>
			<%=render 'shared/error_messages' %>

			<%=f.label :name %>
			<%=f.text_field :name %>

			<%=f.label :description %>
			<%=f.text_area :description %>

			<hr />
			<%= f.submit "Update",class:"btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>