<%= form_for @company , :url => { :action => "update", :id => @company.id } do |f| %>
  <%= f.text_field :call_date, :value => @company.call_date, class:"datepicker" %>
  <%= f.hidden_field :id %>
  <%= f.submit "Updated Call Date", class:"btn btn-primary pull-right" %>
<% end %>
<script type="text/javascript">
	$('.datepicker').datepicker({"format": "yyyy-mm-dd"});
</script>