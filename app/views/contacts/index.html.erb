<% provide(:title,"Contacts") %>
<h1>Contact List <%= link_to 'Add Contact', new_contact_path ,class: "btn btn-primary"%></h1>
<div class="pagination-centered">
<%= will_paginate %>
</div>
<table class="table table-striped table-hover table-bordered">
  <tr>
    <th>Name</th>
    <th>Designation</th>
    <th>Landline</th>
    <th>Mobile</th>
    <th>Email</th>
    <th>Address</th>
    <th>Company</th>
    <th></th>
   
  </tr>

<% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.name %></td>
    <td><%= contact.designation %></td>
    <td><%= contact.landline %></td>
    <td><%= contact.mobile %></td>
    <td><%= contact.email %></td>
    <td><%= contact.address %></td>
    <td><% if contact.company %><%= contact.company.name %><% else %><%= "unassigned" %><% end %></td>
    <td><%= render 'contacts/contact_button', contact: contact %></td>
  </tr>
<% end %>
</table>
<div class="pagination-centered">
<%= will_paginate %>
</div>
<br />


