<div class="row-fluid">
    <span class="span12">
<h1>New contact for <%= @company.name %></h1>

<%= form_for [@company,@company.contacts.build] , :html => {:class => "form-horizontal span12"} do |f| %>
  <fieldset>
    <legend>Legend</legend>
    <div class="control-group">
      <%= f.label :name , :class =>"control-label"%>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :company , :class =>"control-label"%>
      <div class="controls">
        <span class="input-large uneditable-input"><%= @company.name %></span>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :designation , :class =>"control-label"%>
      <div class="controls">
        <%= f.text_field :designation %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :mobile , :class =>"control-label" %>
      <div class="controls">
        <%= f.text_field :mobile %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :landline , :class =>"control-label"%>
      <div class="controls">
        <%= f.text_field :landline %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :email , :class =>"control-label"%>
      <div class="controls">
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :address , :class =>"control-label"%>
      <div class="controls">
        <%= f.text_area :address , :rows => "3"%>
      </div>
    </div>
    <div class="controls">
      <%= f.submit "Add Contact +", class: "btn btn-primary" %>
      <%= link_to "Back", @company,class: "btn btn-inverse" %>
    </div>
  </fieldset>
<% end %>
</span>
</div>